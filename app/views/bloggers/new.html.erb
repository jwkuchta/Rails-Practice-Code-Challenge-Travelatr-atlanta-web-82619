<h1>Create a new blogger:</h1>

<% if @blogger.errors.any? %>
<div id="error_explanation">
    <% @blogger.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
<% end %>



<%= form_for @blogger do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name %>

    <%= f.label "Bio" %>
    <%= f.text_field :bio %>

    <%= f.label "Age" %>
    <%= f.number_field :age %>

    <%= f.submit %>
<% end %>

<h2><%= link_to "Back to Posts", posts_path %></h2>
<h2><%= link_to "Back to Destinations", destinations_path %></h2>
<h2><%= link_to "Back to Bloggers", bloggers_path %></h2>
    
