<h1>Create a new post:</h1>

<% if @post.errors.any? %>
<div id="error_explanation">
    <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
<% end %>



<%= form_for @post do |f| %>
    
    <%= f.label "Title" %>
    <%= f.text_field :title %>

    <%= f.label "Content" %>
    <%= f.text_area :content %>

    <%= f.label "Likes" %>
    <%= f.number_field :likes %>

    <%= f.label :blogger_id %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name  %>

    <%= f.label :destination_id %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name  %>

    <%= f.submit %>
<% end %>

<h2><%= link_to "Back to Posts", posts_path %></h2>
<h2><%= link_to "Back to Destinations", destinations_path %></h2>
<h2><%= link_to "Back to Bloggers", bloggers_path %></h2>

